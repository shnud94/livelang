{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "classic",
        "sourceMap": true,
        "outDir": "./build",
        "watch": true,
        "jsx" : "react",
        "target": "es6"
    },    
    "exclude": [
        "node_modules"
    ]
}